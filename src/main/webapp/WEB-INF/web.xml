<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation=
                 "http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

<display-name>Archetype Created Web Application</display-name>

    <servlet>
            <servlet-name>ShowImage</servlet-name>
            <servlet-class>com.tsystems.javaschool.view.servlets.ShowImage</servlet-class>
    </servlet>
        <servlet-mapping>
            <servlet-name>ShowImage</servlet-name>
            <url-pattern>/ShowImage</url-pattern>
        </servlet-mapping>

    <servlet>
        <servlet-name>EditBookServlet</servlet-name>
        <servlet-class>com.tsystems.javaschool.view.servlets.EditBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditBookServlet</servlet-name>
        <url-pattern>/EditBook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddToCartServlet</servlet-name>
        <servlet-class>com.tsystems.javaschool.view.servlets.AddToCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddToCartServlet</servlet-name>
        <url-pattern>/addToCart</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>CreateOrderServlet</servlet-name>
        <servlet-class>com.tsystems.javaschool.view.servlets.CreateOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateOrderServlet</servlet-name>
        <url-pattern>/CreateOrder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.tsystems.javaschool.view.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditClientServlet</servlet-name>
        <servlet-class>com.tsystems.javaschool.view.servlets.EditClientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditClientServlet</servlet-name>
        <url-pattern>/editProfile</url-pattern>
    </servlet-mapping >

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>bookstore</web-resource-name>
            <url-pattern>/pages/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <security-role>
        <role-name>user</role-name>
    </security-role>


    <security-role>
        <role-name>admin</role-name>
    </security-role>

    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/WEB-INF/index.jsp</form-login-page>
            <form-error-page>/error/login_error.html</form-error-page>

        </form-login-config>
    </login-config>


        <session-config>
            <session-timeout>
                3000
            </session-timeout>
        </session-config>

        <welcome-file-list>
            <welcome-file>main.jsp</welcome-file>
        </welcome-file-list>

        <jsp-config>
            <jsp-property-group>
                <display-name>header_and_footer</display-name>
                <url-pattern>/pages/*</url-pattern>
                <page-encoding>UTF-8</page-encoding>
                <include-prelude>/WEB-INF/jspf/header.jspf</include-prelude>
                <include-coda>/WEB-INF/jspf/footer.jspf</include-coda>
            </jsp-property-group>
        </jsp-config>


