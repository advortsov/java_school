<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="BOOKSTORE1">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.tsystems.javaschool.dao.entity.Author</class>
        <class>com.tsystems.javaschool.dao.entity.Genre</class>
        <class>com.tsystems.javaschool.dao.entity.Publisher</class>
        <class>com.tsystems.javaschool.dao.entity.Book</class>

        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/bookstore1"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="root"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>

        </properties>
    </persistence-unit>
</persistence>
